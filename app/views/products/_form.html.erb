<%= simple_form_for(@product) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.label "Add Image" %>
    <%= f.file_field :pimage, required: false, class: "form-control" %><br>
    <%= f.input :price %>
    <%= f.input :special_instructions %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
